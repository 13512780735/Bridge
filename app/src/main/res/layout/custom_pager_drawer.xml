<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_20"
        android:src="@mipmap/login_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_member_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/memeber_info"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_record_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="航行记录"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/record_icon"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_shipinfo_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="船舶信息"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/shipinfo_icon"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>